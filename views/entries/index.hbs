<a href="/entries/new" class="block button w-100 mar-t-2 mar-b-3 pad-2 round-1 text-c center">Write data</a>

<h2>Company list</h2>

  <form id="seachForm" action="">
    <input id="seachInp" type="text" name="company" value="" placeholder="company">
    <button id="seachButt">Seach</button>
  </form> 


<main role="main" >
  <ul class="entries-list no-bullets no-padding">
    {{#each company}}
      <li class="entry-item pad-b-4">
        <a href="/entries/{{id}}" class="entry-title font-2 pad-b-1-4 c-white">{{name}}</a>
        {{!-- <span class="entry-date block font-3-4 c-lt-gray">Written on </span>
          <p class="entry-stub">11111</p> --}}
      </li>
    {{/each}}
  </ul>
</main>
